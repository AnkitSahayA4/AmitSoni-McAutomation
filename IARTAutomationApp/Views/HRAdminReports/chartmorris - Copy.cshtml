 <script>

/*
Template Name: AdminKit
Author: UXLiner
*/
$(function() {
    "use strict";

// Use Morris.Area instead of Morris.Line

// ======
// Yearly Earning Starts
// ======

         var day_data =  @Html.Raw(ViewBag.DataPoints)
Morris.Line({
  element: 'earning1',
  data: day_data,
  xkey: 'elapsed',
    //ykeys: ['Sales', 'Earning'],
    ykeys: ['Sales'],
  //labels: ['Sales', 'Earning'],
  fillOpacity: 0,
    //pointStrokeColors: ['#1976d2', '#00a65a'],
  pointStrokeColors: ['#1976d2'],
  behaveLikeLine: true,
  gridLineColor: '#e0e0e0',
  lineWidth: 3,
  hideHover: 'auto',
    //lineColors: ['#0077d3', '#00a65a'],
  lineColors: ['#0077d3'],
  parseTime: false,
  resize: true
});

// ======
// Yearly Earning Ending
// ======

// ======
// Donut Chart Starts
// ======

Morris.Donut({
      element: 'donut1',
      data: [
        {value:  @Html.Raw(ViewBag.emponleave), label: 'Employees on Leave'},
        {value:  @Html.Raw(ViewBag.empdueforleave), label: 'Employee go for Leave'},
        {value:  @Html.Raw(ViewBag.emponduty), label: 'Employee on duty'}
      ],
      backgroundColor: '#fff',
      labelColor: '#404e67',
      colors: [
        '#ff4558',
        '#ff7d4d',
        '#00a5a8'
      ],
      formatter: function (x) { return x }
    });

// ======
// Donut chart End
// ======

})(jQuery);
</script>
