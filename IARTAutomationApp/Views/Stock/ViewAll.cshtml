@model IEnumerable<IARTAutomationApp.ViewModels.StockDetails>
@{
    ViewBag.Title = "All Stock List";

}

<div class="content">
    <ol class="breadcrumb bc-colored bg-success m-b-3">
        <li class="breadcrumb-item"><a href="#">Store</a></li>
        <li class="breadcrumb-item active">Stock</li>
        <li class="breadcrumb-item active">View Stock</li>
    </ol>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <h4 class="text-black m-b-1">All Stock Information</h4>
                            <p></p>
                            <div class="row m-t-4">
                                <div class="col-lg-3 col-sm-6 col-xs-12">
                                    <div class="info-box bg-purple text-white">
                                        <div class="col-12">
                                            <span class="info-box-icon bg-transparent"><i class="ti-face-smile"></i></span>
                                            <div class="info-box-content">
                                                <h6 class="info-box-text text-white">Total Stock Records</h6>
                                                <h1 class="text-white">@ViewBag.TotalStockCount</h1>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                

                            </div>
                            <div class="box-body">
                                <div class="table-responsive">
                                    <table id="example2" class="table table-bordered table-hover">
                                        <thead class="bg-success" style="color: #fff;">
                                            <tr>
                                                <th style="text-align: center; color: white;">S. No.</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.stock.StoreId)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.stock.ClassId)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.stock.ItemId)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.stock.BatchNo)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.stock.Quantity)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.stock.UomId)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.stock.VendorId)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.stock.PInvoiceNo)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.stock.ReciveDate)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.stock.TotalPrice)</th>
                                                
                                                <th style="text-align: center; color: white;"> Stock Added By</th>
                                                <th style="width: 150px; text-align: center; color: white;">Action</th>
                                            </tr>
                                        </thead>
                                        @{
                                            int counter = 1;
                                            foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td style="text-align: center;">
                                                        @(counter++)
                                                    </td>
                                                    <td style="text-align: center;">
                                                        @Html.DisplayFor(modelItem => item.store.StoreName)
                                                    </td>
                                                    <td style="text-align: center;">
                                                        @Html.DisplayFor(modelItem => item.classMas.ClassName)
                                                    </td>
                                                    <td style="text-align: center;">
                                                        @Html.DisplayFor(modelItem => item.item.ItemName)
                                                    </td>
                                                    <td style="text-align: center;">
                                                        @Html.DisplayFor(modelItem => item.stock.BatchNo)
                                                    </td>
                                                    <td style="text-align: center;">
                                                        @Html.DisplayFor(modelItem => item.stock.Quantity)
                                                    </td>
                                                    <td style="text-align: center;">
                                                        @Html.DisplayFor(modelItem => item.uom.UOMName)
                                                    </td>
                                                    <td style="text-align: center;">
                                                        @Html.DisplayFor(modelItem => item.vendor.VendorName)
                                                    </td>
                                                    <td style="text-align: center;">
                                                        @Html.DisplayFor(modelItem => item.po.OrderNo)
                                                    </td>
                                                    <td style="text-align: center;">
                                                        @Html.DisplayFor(modelItem => item.stock.ReciveDate)
                                                    </td>
                                                    <td style="text-align: center;">
                                                        @Html.DisplayFor(modelItem => item.stock.TotalPrice)
                                                    </td>
                                                    
                                                    
                                                    <td style="text-align: center;">
                                                       @Html.DisplayFor(modelItem => item.empName)<br />
                                                    Emp Id: @Html.DisplayFor(modelItem => item.stock.EmployeeID)<br />
                                                    On: @Html.DisplayFor(modelItem => item.stock.CreatedDate)
                                                    
                                                    </td>

                                                    <td style="text-align: center;">
                                                       @Html.ActionLink("Edit", "Edit", new { id = item.stock.RecordId })  |
                                                    @Html.ActionLink("Delete", "Delete", new { id = item.stock.RecordId })

                                                    </td>
                                                </tr>
                                            }
                                        }
                                        <tfoot class="bg-success" style="color: #fff;">
                                            <tr>
                                                <th style="text-align: center; color: white;">S. No.</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.stock.StoreId)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.stock.ClassId)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.stock.ItemId)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.stock.BatchNo)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.stock.Quantity)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.stock.UomId)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.stock.VendorId)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.stock.PInvoiceNo)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.stock.ReciveDate)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.stock.TotalPrice)</th>
                                                <th style="text-align: center; color: white;"> Stock Added By</th>
                                                <th style="width: 150px; text-align: center; color: white;">Action</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
