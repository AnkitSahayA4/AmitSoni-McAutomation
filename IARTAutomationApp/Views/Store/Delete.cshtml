@model IARTAutomationApp.Models.StoreMaster
@{
    ViewBag.Title = "DeleteStore";
    
}

<div class="content">
    <ol class="breadcrumb bc-colored bg-success m-b-3">
        <li class="breadcrumb-item"><a href="#">Store</a></li>
        <li class="breadcrumb-item active">Delete Store</li>
    </ol>


    <div class="row">
        <div class="col-lg-12">
            <div class="card ">
                <div class="card-header bg-blue">
                    <h2 class="text-white m-b-0">Delete</h2>
                    <h3>Are you sure you want to delete this?</h3>
                </div>
                <div class="card-body">

                    <div>
                        <h4>Store</h4>
                        <hr />

                        <dl class="dl-horizontal">


                            <dt>
                                @Html.DisplayNameFor(model => model.StoreName)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.StoreName)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.StoreNumber)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.StoreNumber)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.StoreStatus)
                            </dt>

                            <dd>
                                @if (Model.StoreStatus == 1)
                                {
                                    @Html.DisplayName("Active")
                                }
                                else
                                {
                                    @Html.DisplayName("Closed")
                                }
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.StoreDesc)
                            </dt>

                            <dd>

                                @Html.DisplayFor(model => model.StoreDesc)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.CreatedDate)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.CreatedDate)
                            </dd>

                            <dt>

                                Store Image
                            </dt>

                            <dd>
                                <img src="~/Uploads/@Model.StoreImgName" class="form-control" style="width:300px" />

                            </dd>



                        </dl>

                        @using (Html.BeginForm())
                        {
                            <div class="form-actions no-color">
                                <input type="submit" value="Delete" class="btn btn-success" /> |
                                @Html.ActionLink("Back to List", "StoreList")
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>








