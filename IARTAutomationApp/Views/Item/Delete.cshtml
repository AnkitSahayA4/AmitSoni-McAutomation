@model IARTAutomationApp.Models.ItemMaster
@{
    ViewBag.Title = "DeleteItem";
    
}

<div class="content">
    <ol class="breadcrumb bc-colored bg-success m-b-3">
        <li class="breadcrumb-item"><a href="#">Store</a></li>
        <li class="breadcrumb-item"><a href="#">Item</a></li>
        <li class="breadcrumb-item active">Delete Item</li>
    </ol>


    <div class="row">
        <div class="col-lg-12">
            <div class="card ">
                <div class="card-header bg-blue">
                    <h2 class="text-white m-b-0">Delete</h2>
                    <h3>Are you sure you want to delete this?</h3>
                </div>
                <div class="card-body">
                    <div>
                        <h4>Item</h4>
                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayName("Item Id")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.RecordId)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.ItemName)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.ItemName)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.ItemCat)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.ItemCat)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.ItemRate)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.ItemRate)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.ItemTax)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.ItemTax)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.ItemDesc)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.ItemDesc)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.CreatedDate)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.CreatedDate)
                            </dd>

                            <dt>

                                @Html.DisplayNameFor(model => model.ItemImage)
                            </dt>

                            <dd>
                                <img src="~/Uploads/@Model.ItemImage" class="form-control" style="width:300px" />
                                @Html.DisplayFor(model => model.ItemImage)
                            </dd>



                        </dl>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <input type="submit" value="Delete" class="btn btn-success" /> |
                                @Html.ActionLink("Back to List", "ViewAll")
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>








