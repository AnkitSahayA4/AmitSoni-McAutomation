@model IEnumerable<IARTAutomationApp.ViewModels.ItemDetails>
@{
    ViewBag.Title = "All Item";

}

<div class="content">
    <ol class="breadcrumb bc-colored bg-success m-b-3">
        <li class="breadcrumb-item"><a href="#">Store</a></li>
        <li class="breadcrumb-item active">View Item</li>
    </ol>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <h4 class="text-black m-b-1">All Items Information</h4>
                            <p></p>
                            <div class="row m-t-4">
                                <div class="col-lg-3 col-sm-6 col-xs-12">
                                    <div class="info-box bg-darkblue text-white">
                                        <div class="col-12">
                                            <span class="info-box-icon bg-transparent"><i class="ti-face-smile"></i></span>
                                            <div class="info-box-content">
                                                <h6 class="info-box-text text-white">Total Item Records</h6>
                                                <h1 class="text-white">@ViewBag.TotalItemCount</h1>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.col -->

                                <div class="col-lg-3 col-sm-6 col-xs-12">
                                    <div class="info-box bg-green ">
                                        <div class="col-12">
                                            <span class="info-box-icon bg-transparent"><i class="ti-stats-up text-white"></i></span>
                                            <div class="info-box-content">
                                                <h6 class="info-box-text text-white">Total Active Item</h6>
                                                <h1 class="text-white">@ViewBag.ItemActiveCount</h1>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-sm-6 col-xs-12">
                                    <div class="info-box bg-red">
                                        <div class="col-12">
                                            <span class="info-box-icon bg-transparent"><i class="ti-na"></i></span>
                                            <div class="info-box-content">
                                                <h6 class="info-box-text text-white">Total Closed Item</h6>
                                                <h1 class="text-white">@ViewBag.ItemClosedCount</h1>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                

                            </div>
                            <div class="box-body">
                                <div class="table-responsive">
                                    <table id="example2" class="table table-bordered table-hover">
                                        <thead class="bg-success" style="color: #fff;">
                                            <tr>
                                                <th style="text-align: center; color: white;">S. No.</th>
                                                <th style="text-align: center; color: white;">Item Image</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.item.StoreId)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.item.ClassId)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.item.ItemName)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.item.ItemCat)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.item.UomId)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.item.VendorId)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.item.ItemRate)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.item.ItemTax)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.item.StatusId)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.item.ItemDesc)</th>
                                                <th style="text-align: center; color: white;">Item Created By</th>
                                                <th style="width: 150px; text-align: center; color: white;">Action</th>
                                            </tr>
                                        </thead>
                                        @{
                                            int counter = 1;
                                            foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td style="text-align: center;">
                                                        @(counter++)
                                                    </td>
                                                    <td style="text-align: center;">
                                                        <img alt=@item.item.ItemImage class="img" src="~/Uploads/@item.item.ItemImage" style="width: 50px; height: 50px">
                                                    </td>
                                                    <td style="text-align: center;">
                                                        @Html.DisplayFor(modelItem => item.store.StoreName)
                                                    </td>
                                                    <td style="text-align: center;">
                                                        @Html.DisplayFor(modelItem => item.classMas.ClassName)
                                                    </td>
                                                    <td style="text-align: center;">
                                                        @Html.DisplayFor(modelItem => item.item.ItemName)
                                                    </td>
                                                    <td style="text-align: center;">
                                                        @Html.DisplayFor(modelItem => item.item.ItemCat)
                                                    </td>
                                                    <td style="text-align: center;">
                                                        @Html.DisplayFor(modelItem => item.uom.UOMName)
                                                    </td>
                                                    <td style="text-align: center;">
                                                        @Html.DisplayFor(modelItem => item.vendor.VendorName)
                                                    </td>
                                                    <td style="text-align: center;">
                                                        @Html.DisplayFor(modelItem => item.item.ItemRate)
                                                    </td>
                                                    <td style="text-align: center;">
                                                        @Html.DisplayFor(modelItem => item.item.ItemTax)
                                                    </td>
                                                    
                                                    <td style="text-align: center;">
                                                        @if (item.status.StatusName == "Active")
                                                        {
                                                            <span class="label label-success">@Html.DisplayFor(modelItem => item.status.StatusName)</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="label label-danger">@Html.DisplayFor(modelItem => item.status.StatusName)</span>
                                                        }

                                                    </td>
                                                    <td style="text-align: center;">
                                                        @Html.DisplayFor(modelItem => item.item.ItemDesc)
                                                    </td>
                                                    <td style="text-align: center;">
                                                        @Html.DisplayFor(modelItem => item.empName)
                                                        <br />Emp Id: @Html.DisplayFor(modelItem => item.item.EmployeeID)
                                                        <br />On: @Html.DisplayFor(modelItem => item.item.CreatedDate)
                                                    </td>

                                                    <td style="text-align: center;">
                                                        @Html.ActionLink("Edit", "Edit", new { id = item.item.RecordId })  |
                                                        @Html.ActionLink("Delete", "Delete", new { id = item.item.RecordId })

                                                    </td>
                                                </tr>
                                            }
                                        }
                                        <tfoot class="bg-success" style="color: #fff;">
                                            <tr>
                                                <th style="text-align: center; color: white;">S. No.</th>
                                                <th style="text-align: center; color: white;">Item Image</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.item.StoreId)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.item.ClassId)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.item.ItemName)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.item.ItemCat)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.item.UomId)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.item.VendorId)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.item.ItemRate)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.item.ItemTax)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.item.StatusId)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.item.ItemDesc)</th>
                                                <th style="text-align: center; color: white;">Item Created By</th>
                                                <th style="width: 150px; text-align: center; color: white;">Action</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
