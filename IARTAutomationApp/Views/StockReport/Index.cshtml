@model IEnumerable<IARTAutomationApp.ViewModels.StockDetails>
@{
    ViewBag.Title = "Reports";
   
}
<!-- Main content -->
<div class="content">

    <ol class="breadcrumb bc-colored bg-success m-b-3">
        <li class="breadcrumb-item"><a href="#">Reports</a></li>
        <li class="breadcrumb-item active">Store</li>
        <li class="breadcrumb-item active">Stock Report</li>
    </ol>
    <div class="card">
        <div class="card-body">
            <h4 class="text-black">Stock Report</h4>
            <p>Export data to Copy, CSV, Excel & PDF</p>
            <div class="table-responsive">
                <table id="empsn" class="table table-bordered table-hover" data-name="cool-table">
                    <thead>
                        <tr>
                            <th style="text-align: center;">
                                S.No.
                            </th>

                            <th style="text-align: center;">
                                @Html.DisplayNameFor(model => model.stock.StoreId)
                            </th>
                            <th style="text-align: center;">
                                @Html.DisplayNameFor(model => model.stock.ClassId)
                            </th>
                            <th style="text-align: center;">
                                @Html.DisplayNameFor(model => model.stock.ItemId)
                            </th>

                            <th style="text-align: center;">
                                @Html.DisplayNameFor(model => model.stock.BatchNo)
                            </th>

                            <th style="text-align: center;">
                                @Html.DisplayNameFor(model => model.stock.Quantity)
                            </th>
                            <th style="text-align: center;">
                                @Html.DisplayNameFor(model => model.stock.UomId)
                            </th>
                            <th style="text-align: center;">
                                @Html.DisplayNameFor(model => model.stock.VendorId)
                            </th>
                            <th style="text-align: center;">
                                @Html.DisplayNameFor(model => model.stock.PInvoiceNo)
                            </th>
                            <th style="text-align: center;">
                                @Html.DisplayNameFor(model => model.stock.ReciveDate)
                            </th>
                            <th style="text-align: center;">
                                @Html.DisplayNameFor(model => model.stock.TotalPrice)
                            </th>

                            <th style="text-align: center;">
                                Stock Created By
                            </th>

                        </tr>
                    </thead>
                    <tbody>

                      @{
                          int counter = 1;
                          foreach (var item in Model)
                          {

                            <tr>
                                <td>
                                    @(counter++)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.store.StoreName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.classMas.ClassName)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.item.ItemName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.stock.BatchNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.stock.Quantity)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.uom.UOMName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.vendor.VendorName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.po.OrderNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.stock.ReciveDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.stock.TotalPrice)
                                </td>


                                <td>
                                    @Html.DisplayFor(modelItem => item.empName)<br />
                                    Emp Id: @Html.DisplayFor(modelItem => item.stock.EmployeeID)<br />
                                    On: @Html.DisplayFor(modelItem => item.stock.CreatedDate)
                                </td>


                            </tr>
                          }
                    }

                    </tbody>
                    <tfoot>
                        <tr>
                            <th style="text-align: center;">
                                S.No.
                            </th>

                            <th style="text-align: center;">
                                @Html.DisplayNameFor(model => model.stock.StoreId)
                            </th>
                            <th style="text-align: center;">
                                @Html.DisplayNameFor(model => model.stock.ClassId)
                            </th>
                            <th style="text-align: center;">
                                @Html.DisplayNameFor(model => model.stock.ItemId)
                            </th>

                            <th style="text-align: center;">
                                @Html.DisplayNameFor(model => model.stock.BatchNo)
                            </th>

                            <th style="text-align: center;">
                                @Html.DisplayNameFor(model => model.stock.Quantity)
                            </th>
                            <th style="text-align: center;">
                                @Html.DisplayNameFor(model => model.stock.UomId)
                            </th>
                            <th style="text-align: center;">
                                @Html.DisplayNameFor(model => model.stock.VendorId)
                            </th>
                            <th style="text-align: center;">
                                @Html.DisplayNameFor(model => model.stock.PInvoiceNo)
                            </th>
                            <th style="text-align: center;">
                                @Html.DisplayNameFor(model => model.stock.ReciveDate)
                            </th>
                            <th style="text-align: center;">
                                @Html.DisplayNameFor(model => model.stock.TotalPrice)
                            </th>

                            <th style="text-align: center;">
                                Stock Created By
                            </th>

                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>


</div>
<script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.10.2.min.js" type="text/javascript"></script>
<script src="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/jquery-ui.min.js" type="text/javascript"></script>
<link href="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/themes/blitzer/jquery-ui.css" rel="Stylesheet" type="text/css" />

<script src="https://code.jquery.com/jquery-3.3.1.js" type="text/javascript"></script>

<script src="https://cdn.datatables.net/1.10.18/js/jquery.dataTables.min.js" type="text/javascript"></script>

<script src="https://cdn.datatables.net/buttons/1.5.2/js/dataTables.buttons.min.js" type="text/javascript"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js" type="text/javascript"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js" type="text/javascript"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js" type="text/javascript"></script>
<script src="https://cdn.datatables.net/buttons/1.5.2/js/buttons.html5.min.js" type="text/javascript"></script>

<script>

        $('#empsn').DataTable({

                dom: 'Bfrtip',
                buttons: [
                'copyHtml5',
                'excelHtml5',
                'csvHtml5',
                'pdfHtml5'
                ],

        });
</script>
