@model IEnumerable<IARTAutomationApp.ViewModels.PurchaseOrderDetails>

@{
    ViewBag.Title = "AllStoreList";

}

<div class="content">
    <ol class="breadcrumb bc-colored bg-success m-b-3">
        <li class="breadcrumb-item"><a href="#">Store</a></li>
        <li class="breadcrumb-item active">Purchase Order</li>
        <li class="breadcrumb-item active">View Purchase Order</li>
    </ol>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <h4 class="text-black m-b-1">All Purchase Order Information</h4>
                            <p></p>
                            <div class="row m-t-4">
                                <div class="col-lg-4 col-sm-8 col-xs-12">
                                    <div class="info-box bg-facebook text-white">
                                        <div class="col-12">
                                            <span class="info-box-icon bg-transparent"><i class="ti-face-smile"></i></span>
                                            <div class="info-box-content">
                                                <h6 class="info-box-text text-white">Total Purchase Order Records</h6>
                                                <h1 class="text-white">@ViewBag.TotalPOCount</h1>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.col -->

                                

                            </div>
                            <div class="box-body">
                                <div class="table-responsive">
                                    <table id="example2" class="table table-bordered table-hover">
                                        <thead class="bg-success" style="color: #fff;">
                                            <tr>
                                                <th style="text-align: center; color: white;">S. No.</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.porder.OrderNo)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.vendor.VendorName)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.item.ItemName)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.porder.ItemQunt)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.porder.ItemDesc)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.porder.ItemTax)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.porder.DeliLoc)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.porder.Terms)</th>
                                                <th style="text-align: center; color: white;">Purchase Order Created By</th>
                                                <th style="width: 150px; text-align: center; color: white;">Action</th>
                                            </tr>
                                        </thead>
                                        @{
                                            int counter = 1;
                                            foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td style="text-align: center;">
                                                        @(counter++)
                                                    </td>
                                                    <td style="text-align: center;">
                                                        @Html.DisplayFor(modelItem => item.porder.OrderNo)
                                                    </td>
                                                    <td style="text-align: center;">
                                                        @Html.DisplayFor(modelItem => item.vendor.VendorName)
                                                    </td>
                                                    <td style="text-align: center;">
                                                        @Html.DisplayFor(modelItem => item.item.ItemName)
                                                    </td>
                                                    <td style="text-align: center;">
                                                        @Html.DisplayFor(modelItem => item.porder.ItemQunt)
                                                    </td>
                                                    <td style="text-align: center;">
                                                        @Html.DisplayFor(modelItem => item.porder.ItemDesc)
                                                    </td>
                                                    <td style="text-align: center;">
                                                        @Html.DisplayFor(modelItem => item.porder.ItemTax)
                                                    </td>
                                                    <td style="text-align: center;">
                                                       @Html.DisplayFor(modelItem => item.porder.DeliLoc)
                                                    </td>
                                                    <td style="text-align: center;">
                                                        @Html.DisplayFor(modelItem => item.porder.Terms)
                                                    </td>
                                                    <td style="text-align: center;">
                                                        @Html.DisplayFor(modelItem => item.empName) <br />
                                                        Emp Id:  @Html.DisplayFor(modelItem => item.vendor.EmployeeID) <br />
                                                        On: @Html.DisplayFor(modelItem => item.vendor.CreatedDate)
                                                    </td>

                                                    <td style="text-align: center;">
                                                        @Html.ActionLink("Edit", "Edit", new { id = item.porder.RecordId })  |
                                                        @Html.ActionLink("Delete", "Delete", new { id = item.porder.RecordId })
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        <tfoot class="bg-success" style="color: #fff;">
                                            <tr>
                                                <th style="text-align: center; color: white;">S. No.</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.porder.OrderNo)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.vendor.VendorName)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.item.ItemName)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.porder.ItemQunt)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.porder.ItemDesc)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.porder.ItemTax)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.porder.DeliLoc)</th>
                                                <th style="text-align: center; color: white;">@Html.DisplayNameFor(model => model.porder.Terms)</th>
                                                <th style="text-align: center; color: white;">Purchase Order Created By</th>
                                                <th style="width: 150px; text-align: center; color: white;">Action</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
