@model IEnumerable<IARTAutomationApp.Models.EmployeePI>

@{
    ViewBag.Title = "Index";
    
}

<!-- Main content -->
<div class="content">

    <ol class="breadcrumb bc-colored bg-success m-b-3">
        <li class="breadcrumb-item"><a href="#">Admin-HR</a></li>
        <li class="breadcrumb-item active">  Personal Information</li>
    </ol>
    <h5 class="alert-danger"> @TempData["msg"] </h5>
    <h5 class="text-success">  @TempData["successmsg"] </h5>
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <h4 class="text-black m-b-1">  Personal Information</h4>
                            <p></p>
                          
                            <div class="box-body">
                                <div class="table-responsive">
                                    <table id="example2" class="table table-bordered table-hover">
                                        <thead class="bg-success" style="color: #fff;">
                                            <tr>
                                                <th style="width:100px; text-align: center;">S. No.</th>
                                                <th style="width: 150px; text-align: center;">@Html.DisplayNameFor(model => model.EmployeeCode)</th>
                                                <th style="text-align: center;">@Html.DisplayNameFor(model => model.EmpEmailId)</th>
                                                <th style="text-align: center;">@Html.DisplayNameFor(model => model.MobileNo)</th>
                                                <th style="text-align: center;">@Html.DisplayNameFor(model => model.PermanentAddress)</th>
                                                <th style="text-align: center;">@Html.DisplayNameFor(model => model.EmployeeStatus)</th>
                                              
                                            </tr>
                                        </thead>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td style="text-align: center;">
                                                    @Html.DisplayFor(modelItem => item.EmployeePIId)
                                                </td>
                                                <td style="text-align: center;">
                                                    @Html.DisplayFor(modelItem => item.EmployeeCode)
                                                </td>
                                                <td style="text-align: center;">
                                                    @Html.DisplayFor(modelItem => item.EmpEmailId)
                                                </td>
                                                <td style="text-align: center;">
                                                    @Html.DisplayFor(modelItem => item.PermanentAddress)
                                                </td>
                                                <td style="text-align: center;">
                                                    @Html.DisplayFor(modelItem => item.MobileNo)
                                                </td>
                                                <td style="text-align: center;">
                                                    @Html.DisplayFor(modelItem => item.EmployeeStatus)
                                                </td>
                                                
                                            </tr>
                                        }
                                        <tfoot class="bg-success" style="color: #fff;">
                                            <tr>
                                                <th style="width:100px; text-align: center;">S. No.</th>
                                                <th style="width: 150px; text-align: center;">@Html.DisplayNameFor(model => model.EmployeeCode)</th>
                                                <th style="text-align: center;">@Html.DisplayNameFor(model => model.EmpEmailId)</th>
                                                <th style="text-align: center;">@Html.DisplayNameFor(model => model.MobileNo)</th>
                                                <th style="text-align: center;">@Html.DisplayNameFor(model => model.PermanentAddress)</th>
                                                <th style="text-align: center;">@Html.DisplayNameFor(model => model.EmployeeStatus)</th>
                                           
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Main row -->
</div>
<!-- /.content --> 
