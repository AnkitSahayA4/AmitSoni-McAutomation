                    <h2 class="text-white m-b-0">Delete</h2>
                    <h3>Are you sure you want to delete this?</h3>
                </div>
                <div class="card-body">
                    <div>
                        
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayName("Class Id")
