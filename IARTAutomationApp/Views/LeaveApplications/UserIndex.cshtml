@model IEnumerable<IARTAutomationApp.Models.LeaveApplication>

@{
    ViewBag.Title = "Index";
    
    int SrNo = 0;
}

@Html.Raw(TempData["msg"])
<!-- Main content -->
<div class="content">

    <ol class="breadcrumb bc-colored bg-success m-b-3">
        <li class="breadcrumb-item"><a href="#">Admin-HR</a></li>
        <li class="breadcrumb-item"><a href="#">Leave Management</a></li>
        <li class="breadcrumb-item active">  Leave Applications</li>
    </ol>

    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <h4 class="text-black m-b-1">Leave Applications</h4>
                           
                         
                            <div class="box-body">
                                <div class="table-responsive">
                                    <table id="example2" class="table table-bordered table-hover">
                                        <thead class="bg-success" style="color: #fff;">
                                            <tr>
                                                <th style="width:100px; text-align: center;">S. No.</th>
                                                <th>@Html.DisplayName("Employee Code")</th>
                                                <th>@Html.DisplayName("Leave Type")</th>
                                                <th>@Html.DisplayName("Leave FROM Date")</th>
                                                <th>@Html.DisplayName("Leave TO Date")</th>
                                                <th>@Html.DisplayName("Total Leave Days")</th>
                                                <th>@Html.DisplayName("Status")</th>
                                                <th>@Html.DisplayName("Application Date")</th>
                                               
                                            </tr>
                                        </thead>
                                        @foreach (var item in Model)
                                        {
                                            
                                            { SrNo = SrNo + 1; }
                                            <tr>
                                                <td style="text-align: center;">@SrNo</td>
                                                <td>@Html.DisplayFor(modelItem => item.EmployeeCode)</td>
                                                <td>@Html.DisplayFor(modelItem => item.LeaveTypeName)</td>
                                                <td>@Html.DisplayFor(modelItem => item.LeaveFromDate)</td>
                                                <td>@Html.DisplayFor(modelItem => item.LeaveToDate)</td>
                                                <td>@Html.DisplayFor(modelItem => item.NoOfDays)</td>
                                                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                                                <td>@Html.DisplayFor(modelItem => item.AppDate)</td>
                                                 
                                            </tr>
                                        }
                                        <tfoot class="bg-success" style="color: #fff;">
                                            <tr>
                                                <th style="width:100px; text-align: center;">S. No.</th>
                                                <th>@Html.DisplayNameFor(model => model.EmployeeCode)</th>
                                                <th>@Html.DisplayNameFor(model => model.LeaveTypeName)</th>
                                                <th>@Html.DisplayNameFor(model => model.LeaveFromDate)</th>
                                                <th>@Html.DisplayNameFor(model => model.LeaveToDate)</th>
                                                <th>@Html.DisplayNameFor(model => model.NoOfDays)</th>
                                                <th>@Html.DisplayNameFor(model => model.IsApproved)</th>
                                                <th>@Html.DisplayNameFor(model => model.AppDate)</th>
                                               
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Main row -->
</div>
<!-- /.content --> 